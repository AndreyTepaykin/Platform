    meta(charset='utf8')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='viewport', content='minimum-scale=1.0, maximum-scale=1.0, initial-scale=1.0, user-scalable=no')
    link(rel='stylesheet', href='web/css/ui-common.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js')
    script(src='web/js/iscroll.js')
    script(src='web/js/Q.js')
    script(src='web/js/ui.js')
    //[if !IE]
    // CSS media queries go here
